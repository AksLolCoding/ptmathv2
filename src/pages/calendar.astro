---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Calendar">
  <main class="page">
    <section class="hero" style="--hero-image: linear-gradient(130deg, #2d6076, #2d6b43); --showcase-image: url('/images/favicon.png');">
      <div class="hero-copy">
        <h1 class="intro-item">Program Calendar</h1>
        <p class="intro-item">List sessions, registration deadlines, and major competition dates in one place.</p>
      </div>
      <aside class="hero-media intro-item" data-parallax>
        <p>Replace with your calendar screenshot or poster.</p>
      </aside>
    </section>

    <section class="section reveal">
      <h2>Monthly Timeline</h2>
      <div class="grid cols-3">
        <article class="card">
          <h3>Week 1</h3>
          <p>Circle session + opener problems.</p>
        </article>
        <article class="card">
          <h3>Week 2</h3>
          <p>Topic deep dive and guided practice.</p>
        </article>
        <article class="card">
          <h3>Week 3</h3>
          <p>Mock test and collaborative review.</p>
        </article>
      </div>
    </section>
  </main>
</BaseLayout>
