---
interface Props {
  title: string;
  hideChrome?: boolean;
  compactHero?: boolean;
}

const { title, hideChrome = false, compactHero = false } = Astro.props;
---
<html lang="en-US">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Syne:wght@500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
  </head>
  <body class={compactHero ? "compact-hero" : undefined}>
    {!hideChrome && (
      <>
        <div class="navbar">
          <a href="/" class="home"
            ><img src="/favicon.png" alt="PeachTree Math Circle logo" /></a
          >
          <a href="/events">Events</a>
          <a href="/resources">Resources</a>
          <a href="/news">News</a>
          <a href="/calendar">Calendar</a>
          <a href="/team">Team</a>
          <a href="https://discord.gg/8S4m29yV48" class="discord" target="_blank" rel="noreferrer" title="Discord"
            ><img src="/images/discord.png" alt="Discord" /></a
          >
          <a
            href="https://www.instagram.com/ptmathcircle/"
            class="insta"
            target="_blank"
            rel="noreferrer"
            title="Instagram"
            ><img src="/images/Instagram_Glyph_White.png" alt="Instagram" /></a
          >
          <p class="email" title="Contact"><img src="/images/email-icon.png" alt="Email" /></p>
        </div>

        <div id="copyemailprompt">
          <div id="copyemailpopup" tabindex="0">
            <p>Want to contact us?</p>
            <button id="copyemail" type="button">Copy email</button>
          </div>
        </div>
      </>
    )}

    <slot />

    {!hideChrome && (
      <>
        <script is:inline src="/scripts/contact.js"></script>
        <script is:inline src="/scripts/load-animation.js"></script>
        <script is:inline src="/scripts/scroll-effects.js"></script>
      </>
    )}
  </body>
</html>
