---

interface Props {
  title: string;
  hideHero?: boolean;
}

const { title, hideHero = false } = Astro.props;
const fullTitle = `${title} - PeachTree Math Circle`;
---
<html lang="en-US">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{fullTitle}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Syne:wght@500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
  </head>
  <body>
    <>
      <div class="navbar">
        <a href="/" class="home"
          ><img src="/favicon.png" alt="PeachTree Math Circle logo" /></a
        >
        <a href="/events">Events</a>
        <a href="/resources">Resources</a>
        <a href="/news">News</a>
        <a href="/calendar">Calendar</a>
        <a href="/team">Team</a>
        <a href="https://discord.gg/8S4m29yV48" class="discord" target="_blank" rel="noreferrer" title="Discord">
          <img src="/images/discord.png" alt="Discord" />
        </a>
        <a
          href="https://www.instagram.com/ptmathcircle/"
          class="insta"
          target="_blank"
          rel="noreferrer"
          title="Instagram"
          ><img src="/images/Instagram_Glyph_White.png" alt="Instagram" /></a
        >
        <p class="email" title="Contact"><img src="/images/email-icon.png" alt="Email" /></p>
      </div>

      <div id="copyemailprompt">
        <div id="copyemailpopup" tabindex="0">
          <p>Want to contact us?</p>
          <button id="copyemail" type="button">Copy email</button>
        </div>
      </div>
    </>


    {!hideHero && (
      <section class="hero" style="--hero-image: url('/images/favicon.png'); --showcase-image: url('/images/favicon-light.png');">
        <div class="hero-copy">
          <h1 class="intro-item">PeachTree Math Circle</h1>
          <p class="intro-item">Building joyful, rigorous problem solving for students across Georgia through math circles, events, and collaborative mentorship.</p>
          <div class="hero-badges intro-item">
            <span class="badge">Student-led</span>
            <span class="badge">Competition + Curiosity</span>
            <span class="badge">Beginner to Olympiad</span>
          </div>
        </div>
        <aside class="hero-media intro-item" data-parallax>
          <p>Replace this panel image by updating <code>--showcase-image</code> in <code>/src/pages/index.astro</code>.</p>
        </aside>
      </section>
    )}

    <slot />

    <>
      <script is:inline src="/scripts/contact.js"></script>
      <script is:inline src="/scripts/load-animation.js"></script>
      <script is:inline src="/scripts/scroll-effects.js"></script>
    </>
  </body>
</html>
